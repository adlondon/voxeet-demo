{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "experimentalDecorators": true
    }
  },
  "env": {
    "es6": true
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "globals": {
    "__DEV__": false,
    "window": false,
    "fetch": false,
    "document": false,
    "navigator": false,
  },
  "rules": {
    "react/forbid-prop-types": 0,
    "react/jsx-filename-extension": 0
  }
}
